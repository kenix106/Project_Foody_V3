<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".SignUPActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextPhone_UP"
            android:hint="N° Telefono"
            android:textColorHint="@android:color/white"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:inputType="phone"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="12"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"
            />

           <com.rengwuxian.materialedittext.MaterialEditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/EditTextName_UP"
               android:hint="Nombre"
               android:textColorHint="@android:color/white"
               android:text=""
               android:textColor="@android:color/white"
               android:textSize="34sp"
               android:inputType="text"
               app:met_baseColor="@android:color/white"
               app:met_floatingLabel="highlight"
               app:met_maxCharacters="30"
               app:met_primaryColor="@android:color/white"
               app:met_singleLineEllipsis="true"
               />




        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/EditTextPassword_UP"
            android:hint="Contraseña"
            android:textColorHint="@android:color/white"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:inputType="textPassword"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="15"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"
            />

    </LinearLayout>

    <info.hoang8f.widget.FButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/BTN_SignInRegistrar_signUPActivity"
        android:text="Registrar"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowRadius="6"
        android:layout_margin="10dp"
        app:fButtonColor="@color/BtnRegistro"
        />

</RelativeLayout>